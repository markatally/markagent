{
  "name": "mark-agent",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=web",
    "dev:api": "turbo run dev --filter=api",
    "build": "turbo run build",
    "test": "CONFIG_PATH=config/default.json bun test tests/",
    "test:api": "turbo run test --filter=api",
    "lint": "turbo run lint",
    "worker": "cd apps/api && bun run worker",
    "db:migrate": "cd apps/api && bunx prisma migrate dev",
    "db:deploy": "cd apps/api && bunx prisma migrate deploy",
    "db:generate": "cd apps/api && bunx prisma generate",
    "db:studio": "cd apps/api && bunx prisma studio",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "bun@1.0.0",
  "dependencies": {
    "dockerode": "^4.0.9",
    "pptxgenjs": "^4.0.1"
  }
}
